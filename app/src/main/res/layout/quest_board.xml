<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-60dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="@+id/questBoardTitle"
        app:layout_constraintEnd_toEndOf="@+id/questBoardTitle"
        app:layout_constraintStart_toStartOf="@+id/questBoardTitle"
        app:layout_constraintTop_toTopOf="@+id/questBoardTitle"
        app:srcCompat="@drawable/wooden_plank" />

    <TextView
        android:id="@+id/questBoardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/brown_dark_1_trasn_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Place Holder" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questBoardTitle"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>